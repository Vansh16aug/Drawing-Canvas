<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Signin</title>
    <%- include('./partials/head.ejs') %>
    <style>
      section {
        position: relative;
        display: flex;
        justify-content: center;
        align-items: center;
        width: 100%;
        height: 100vh;
        overflow-x: hidden;
      }
      section .bg {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        pointer-events: none;
        object-fit: cover;
      }
      section .trees {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
        z-index: 100;
        pointer-events: none;
      }
      section .girl {
        position: absolute;
        scale: 0.65;
        pointer-events: none;
        animation: animateGirl 10s linear infinite;
      }
      @keyframes animateGirl {
        0% {
          transform: translateX(calc(100% + 100vw));
        }
        50% {
          transform: translateX(calc(-100% - 100vw));
        }
        50.01% {
          transform: translateX(calc(-100% - 100vw)) rotateY(180deg);
        }
        100% {
          transform: translateX(calc(-100% + 100vw)) rotateY(180deg);
        }
      }

      .login {
        position: relative;
        padding: 60px;
        background: rgba(255, 255, 255, 0.25);
        backdrop-filter: blur(15px);
        border: 1px solid #fff;
        border-bottom: 1px solid rgba(255, 255, 255, 0.5);
        border-right: 1px solid rgba(255, 255, 255, 0.5);
        border-radius: 20px;
        width: 500px;
        display: flex;
        flex-direction: column;
        gap: 10px;
        box-shadow: 0 25px 50px rgba(0, 0, 0, 0.1);
      }
      .login h2 {
        position: relative;
        width: 100%;
        width: 100%;
        text-align: center;
        font-size: 2.5em;
        font-weight: 600;
        color: #8f2c24;
        margin-bottom: 10px;
      }

      .login .inputBox {
        position: relative;
      }

      .login .inputBox input {
        position: relative;
        width: 100%;
        padding: 15px 20px;
        outline: none;
        font-size: 1.25em;
        color: #8f2c24;
        border-radius: 5px;
        background: #fff;
        border: none;
        margin-bottom: 30px;
      }

      .login .inputBox ::placeholder {
        color: #8f2c24;
      }
      .login .inputBox #btn {
        position: relative;
        border: none;
        outline: none;
        background: #8f2c24;
        color: #fff;
        cursor: pointer;
        font-size: 1.25em;
        transition: 0.5s;
      }

      .login .inputBox #btn:hover {
        background: #d64c42;
      }

      .login .group {
        display: flex;
        justify-content: space-between;
      }

      .login .group a {
        font-size: 1.25em;
        color: #8f2c24;
        font-weight: 500;
        text-decoration: none;
      }

      .leaves {
        position: absolute;
        width: 100%;
        height: 100vh;
        overflow: hidden;
        display: flex;
        justify-content: center;
        align-items: center;
        z-index: 1;
        pointer-events: none;
      }

      .leaves .set {
        position: absolute;
        width: 100%;
        height: 100%;
        top: 0;
        left: 0;
        pointer-events: none;
      }

      .leaves .set div {
        position: absolute;
        display: block;
      }

      .leaves .set div:nth-child(1) {
        left: 20%;
        animation: animate 20s linear infinite;
      }
      .leaves .set div:nth-child(2) {
        left: 65%;
        animation: animate 14s linear infinite;
      }
      .leaves .set div:nth-child(3) {
        left: 35%;
        animation: animate 12s linear infinite;
      }
      .leaves .set div:nth-child(4) {
        left: 85%;
        animation: animate 15s linear infinite;
      }
      .leaves .set div:nth-child(5) {
        left: 5%;
        animation: animate 18s linear infinite;
      }
      .leaves .set div:nth-child(6) {
        left: 90%;
        animation: animate 12s linear infinite;
      }
      .leaves .set div:nth-child(7) {
        left: 5%;
        animation: animate 14s linear infinite;
      }
      .leaves .set div:nth-child(8) {
        left: 45%;
        animation: animate 15s linear infinite;
      }
      .leaves .set div:nth-child(9) {
        left: 100%;
        animation: animate 16s linear infinite;
      }

      @keyframes animate {
        0% {
          opacity: 0;
          top: -10%;
          transform: translateX(20px) rotate(0deg);
        }
        10% {
          opacity: 1;
        }
        20% {
          transform: translateX(-20px) rotate(45deg);
        }
        40% {
          transform: translateX(-20px) rotate(90deg);
        }
        60% {
          transform: translateX(20px) rotate(180deg);
        }
        80% {
          transform: translateX(-20px) rotate(45deg);
        }
        100% {
          top: 110%;
          transform: translateX(20px) rotate(225deg);
        }
      }
    </style>
  </head>
  <body>
    <% if (locals.error) { %>
    <div class="container mt-4">
      <div class="alert alert-danger" role="alert"><%= locals.error %></div>
    </div>
    <% } %>

    <section>
      <div class="leaves">
        <div class="set">
          <div><img src="/images/leaf_01.png" /></div>
          <div><img src="/images/leaf_02.png" /></div>
          <div><img src="/images/leaf_03.png" /></div>
          <div><img src="/images/leaf_04.png" /></div>
          <div><img src="/images/leaf_01.png" /></div>
          <div><img src="/images/leaf_02.png" /></div>
          <div><img src="/images/leaf_03.png" /></div>
          <div><img src="/images/leaf_04.png" /></div>
        </div>
      </div>
      <img src="/images/bg.jpg" class="bg" />
      <img src="/images/girl.png" class="girl" />
      <img src="/images/trees.png" class="trees" />
      <form class="login" id="signinForm" action="/user/signup" method="POST">
        <h2>SignUp</h2>
        <div class="inputBox">
          <input type="fullName" name="fullName" placeholder="Fullname" />
        </div>
        <div class="inputBox">
          <input type="email" name="email" placeholder="Email" />
        </div>
        <div class="inputBox">
          <input
            type="password"
            name="password"
            placeholder="Password"
            id="passwordInput"
          />
        </div>
        <div class="inputBox">
          <input type="submit" value="SignUp" id="btn" />
        </div>
        <div class="group">
          <a href="/user/signin" style="text-decoration: none">SignIn</a>
          <a href="/">Guest?</a>
        </div>
      </form>
    </section>
    <%- include('./partials/scripts.ejs') %>
  </body>
</html>
