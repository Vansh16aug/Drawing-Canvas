<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Hall Of Fame</title>
    <%- include('./partials/head.ejs') %>
    <style>
      body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
      }

      .container {
        max-width: 800px;
        margin: 0 auto;
        padding: 20px;
      }

      h1 {
        font-size: 24px;
        margin-bottom: 10px;
      }

      .yo {
        max-width: 100%;
        height: auto;
        filter: grayscale(100%); /* Add grayscale effect */
        transition: filter 0.3s ease-in-out; /* Add transition effect */
      }

      .yo:hover {
        filter: none; /* Remove grayscale effect on hover */
      }

      .mt-4 {
        margin-top: 20px;
      }

      .mt-3 {
        margin-top: 15px;
      }

      .mb-3 {
        margin-bottom: 15px;
      }

      .form-control {
        width: 100%;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 4px;
      }

      .btn {
        padding: 10px 20px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
      }

      .btn-primary {
        background-color: #007bff;
        color: #fff;
      }

      pre {
        white-space: pre-wrap;
        word-wrap: break-word;
      }

      /* New CSS class for the image */
      .cool-image {
        max-width: 100%;
        height: auto;
        object-fit: cover;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
      }
    </style>
  </head>

  <body>
    <%- include('./partials/nav.ejs') %> <%- include('./partials/bg.ejs') %>

    <div
      style="
        z-index: 999;
        display: flex;
        margin: auto;
        flex-direction: column;
        margin-top: 80px;
        justify-items: center;
        width: 50%;
        overflow-x: hidden;
        background: rgba(255, 255, 255, 0.4);
        backdrop-filter: blur(10px);
        border-radius: 10px;
        padding: 20px;
      "
    >
      <div class="container mt-4">
        <h1 style="font-size: 28px; color: #333; text-align: center">
          <strong><%= blog.title.toUpperCase() %></strong>
        </h1>
        <img
          src="<%= blog.coverImageURL %>"
          class="yo cool-image"
          width="700px"
          style="display: flex; align-items: center; justify-items: center"
        />
        <div class="container mt-4" style="word-wrap: break-word;">
        <p class="mt-3"><%= blog.body %></p>
        </div>
      </div>
      </div>
    </div>
    <div
      class="container mt-4"
      style="text-align: center; justify-content: center"
    >
      <% if (blog.createdBy && blog.createdBy.profileImageURL) { %>
      <img src="<%= blog.createdBy.profileImageURL %>" width="50px" />
      <% } %>

      <div style="display: flex; justify-content: center; align-items: center">
        <p style="text-align: center; font-weight: 500">
           <% if (blog.createdBy &&
          blog.createdBy.fullName) { %> <%= blog.createdBy.fullName %> <% } %>
        </p>
      </div>
      <div class="container mt-3 " style="background: rgba(255, 255, 255, 0.4);
        backdrop-filter: blur(10px);">
      <h1>Comments (<%= comments.length %>)</h1>
      <% if (locals.user) { %>
      <form action="/Eachblog/comment/<%= blog._id %>" method="post">
        <div class="mb-3">
          <input
            type="text"
            name="content"
            class="form-control"
            placeholder="Enter your comment"
            required
          />
          <button class="btn btn-sm btn-primary mt-3" type="submit">Add</button>
        </div>
      </form>

      <% } %>
      <div class="mt-3" >
        <% comments.forEach(comment => { %>
        <div>
          <% if (comment.createdBy &&
          comment.createdBy.profileImageURL) { %>
             <img src="<%= comment.createdBy.profileImageURL %>" width="50px" />
             <% } %>
          
          <% if (comment.createdBy &&
          comment.createdBy.fullName) { %> <%= comment.createdBy.fullName %> <% } %>
          <pre><%= comment.content %></pre>
        </div>
        <% }) %>
      </div>
    </div>
    </div>
    
    

    <%- include('./partials/scripts.ejs') %>
  </body>
</html>
